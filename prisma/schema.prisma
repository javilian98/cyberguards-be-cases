generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("CASE_DATABASE_URL")
}

model Case {
  id              String   @id @unique @default(uuid())
  caseStatus      Int
  title           String
  description     String
  riskScore       Int 
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  assigneeId      String?  
  assignedAt      DateTime?
  employeeId      String?
}

model CaseAuditLog {
  id          String @id @unique @default(uuid())
  caseId      String
  assigneeId  String?
  action      String
  edits       String?
  createdAt   DateTime @default(now())
}
