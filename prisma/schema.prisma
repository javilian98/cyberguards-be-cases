generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("CASE_DATABASE_URL")
}

model Case {
  id              String   @id @unique @default(uuid())
  title           String
  description     String
  riskStatus      String
  riskScore       Int 
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  assigneeId      String?  
  assignedAt      DateTime?
  suspectedUserId String?
  threatPageUrl   String
}

